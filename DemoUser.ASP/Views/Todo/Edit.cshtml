@model DemoUser.ASP.Models.Todo.TodoEditViewModel

@{
    ViewData["Title"] = "Edit Todo";
}

<h1>Edit Todo</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-check mt-2">
        <input asp-for="IsDone" class="form-check-input" />
        <label asp-for="IsDone" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a asp-controller="Todo" asp-action="Index" class="btn btn-secondary mt-2">Back to list</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
